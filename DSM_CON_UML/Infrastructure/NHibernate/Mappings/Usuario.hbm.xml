<?xml version="1.0" encoding="utf-8" ?>
<!-- Placeholder mapping for Usuario; adapt columns and generator as required -->
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ApplicationCore" namespace="ApplicationCore.Domain.EN">
  <class name="Usuario" table="Usuarios">
    <id name="IdUsuario" column="Id" type="long">
      <generator class="hilo">
        <param name="table">NHibernateUniqueKey</param>
        <param name="column">NextHigh</param>
        <param name="max_lo">100</param>
      </generator>
    </id>
    <property name="Nombre" column="Nombre" />
    <property name="Email" column="Email" />
    <property name="Password" column="Password" />
    <property name="Telefono" column="Telefono" />

    <bag name="Anuncios" inverse="true" cascade="all-delete-orphan">
      <key column="UsuarioId" />
      <one-to-many class="Anuncio" />
    </bag>

    <bag name="Mensajes" inverse="true" cascade="all-delete-orphan">
      <key column="UsuarioId" />
      <one-to-many class="Mensaje" />
    </bag>

    <bag name="Pagos" inverse="true" cascade="all-delete-orphan">
      <key column="UsuarioId" />
      <one-to-many class="Pago" />
    </bag>
  </class>
</hibernate-mapping>
